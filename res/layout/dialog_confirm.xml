<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halfblack"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"  >

    <RelativeLayout
        android:id="@+id/rlDialog"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/confirm_dialog_cancel_bg_selector"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="@color/green"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvCancel"
            android:background="@drawable/confirm_dialog_confirm_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/confirm"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvConfirm"
            android:clickable="true"
            android:background="@drawable/confirm_dialog_title_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/confirm"
            android:textColor="@color/font_gray"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>